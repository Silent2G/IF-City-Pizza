<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/image_ready_pizza"
        android:layout_width="129dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp" />

    <Switch
        android:id="@+id/switch_delivery"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="158dp" />

    <TextView
        android:id="@+id/text_view_delivery"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image_ready_pizza"
        android:layout_marginEnd="140dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="@string/delivery" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="79dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image_ready_pizza"
        android:layout_marginEnd="27dp"
        app:srcCompat="@drawable/hryvna" />

    <TextView
        android:id="@+id/text_view_gryvna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switch_delivery"
        android:layout_alignEnd="@+id/imageView3"
        android:text="1000 грн."
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>