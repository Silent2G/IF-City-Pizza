<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/image_vodafone"
            android:contentDescription="@string/vodafone"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vodafone" />

        <ImageButton
            android:id="@+id/image_kyivstar"
            android:contentDescription="@string/kyivstar"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_below="@+id/image_vodafone"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/kyivstar" />

</RelativeLayout>